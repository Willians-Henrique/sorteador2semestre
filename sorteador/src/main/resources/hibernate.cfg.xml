<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Configurações do banco de dados H2 persistente em arquivo -->
        <property name="hibernate.connection.driver_class">org.h2.Driver</property>
        <property name="hibernate.connection.url">jdbc:h2:file:C:/Users/fsfsfs/Desktop/projeto2semetre/sorteador2semestre/sorteador_db</property>


        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.connection.password"></property>
        <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>

        <!-- Configuração do hbm2ddl (geração do schema) -->
        <property name="hibernate.hbm2ddl.auto">update</property>


        <!-- Propriedades de logging (opcional) -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.use_sql_comments">true</property>

        <!-- Mapeamento das entidades -->
        <mapping class="com.sorteador.models.Bebida" />
        <mapping class="com.sorteador.models.BebidaQuantidadePadrao" />
        <mapping class="com.sorteador.models.BebidaTipo" />
        <mapping class="com.sorteador.models.Comida" />
        <mapping class="com.sorteador.models.ComidaCategoriaCarne" />
        <mapping class="com.sorteador.models.ComidaCategoriaSalgado" />
        <mapping class="com.sorteador.models.ComidaQuantidadePadrao" />
        <mapping class="com.sorteador.models.ComidaTipo" />
        <mapping class="com.sorteador.models.Pessoa" />
        <mapping class="com.sorteador.models.PessoaCategoria" />
    </session-factory>
</hibernate-configuration>
